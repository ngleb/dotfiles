defscrollback 15000

shell -$SHELL

altscreen on

startup_message off
msgwait 1
vbell off

term screen-256color

caption always "%{-b ..}%-w%{+b bW}%n%f %t%{-}%+w%=%H |%C%a "
# hardstatus alwayslastline "%{-b ..}%-w%{+b bW}%n%f %t%{-}%+w%=%H |%C%a "

escape ``

bind C screen -t 'mc' 4 env TERMCAP= mc -x

bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

# EOL
